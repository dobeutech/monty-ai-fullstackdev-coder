{
  "name": "long-running-agent-framework",
  "version": "1.0.0",
  "description": "Claude Agent SDK framework for long-running development work with incremental progress tracking",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "agent": "./src/index.ts"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "agent:init": "FORCE_INIT=true tsx src/index.ts",
    "agent:code": "tsx src/index.ts --code",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Tests would run here\"",
    "clean": "rm -rf dist .agent",
    "help": "tsx src/index.ts --help"
  },
  "keywords": [
    "claude",
    "agent",
    "ai",
    "anthropic",
    "sdk",
    "long-running",
    "incremental"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
