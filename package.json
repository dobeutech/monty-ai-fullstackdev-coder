{
  "name": "@dobeutechsolutions/monty-fullstack-agent",
  "version": "1.0.3",
  "description": "Claude Agent SDK framework for autonomous full-stack development - from idea to production deployment",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "monty": "./bin/cli.js",
    "monty-agent": "./bin/cli.js",
    "fullstack-agent": "./bin/cli.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "agent:init": "node dist/index.js --init",
    "agent:code": "node dist/index.js --code",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "shx mkdir -p dist/agents && shx cp -r src/agents/prompts dist/agents/ && shx cp -r templates dist/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .agent",
    "help": "node dist/index.js --help",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "postinstall": "echo 'âœ… monty-fullstack-agent installed! Run: monty --help'"
  },
  "keywords": [
    "claude",
    "agent",
    "ai",
    "anthropic",
    "sdk",
    "fullstack",
    "developer",
    "autonomous",
    "code-generation",
    "web-development",
    "react",
    "nextjs",
    "typescript",
    "production",
    "deployment",
    "long-running",
    "incremental"
  ],
  "author": "Dobeu Tech Solutions LLC",
  "license": "CC-BY-NC-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dobeutech/monty-ai-fullstackdev-coder.git"
  },
  "bugs": {
    "url": "https://github.com/dobeutech/monty-ai-fullstackdev-coder/issues"
  },
  "homepage": "https://github.com/dobeutech/monty-ai-fullstackdev-coder#readme",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.6",
    "open": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/ui": "^4.0.17",
    "shx": "^0.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "templates",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
